<!DOCTYPE html>
<link rel="stylesheet" href="[% url_prefix %]plugins/pansnaps/marx.min.css">
<link rel="stylesheet" href="[% url_prefix %]plugins/pansnaps/pansnaps.css">
<table>
    <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Published</th>
    <th>URL</th>
    </tr>
    [% FOREACH d IN dashboards %]
        <tr>
            <td><a target=_blank href="../panorama.cgi?map=[% d.nr | html%]">[% d.nr | html%]</a></td>
            <td>[% d.name | html %]</td>
            <td><input
                type="checkbox"
                data-title="[% d.name | html %]"
                data-id="[% d.nr %]" [% 'checked=checked' IF d.published %]
                >
            </td>
            <td id="url_[% d.nr %]"></td>
        </tr>
    [% END %]
</table>
<script>
document.addEventListener("DOMContentLoaded", () => {
    const set_dashboard = (input) => {
        xmlHttp = new XMLHttpRequest();
        const id = input.getAttribute("data-id");
        const title = input.getAttribute("data-title");
        const checked = input.checked;
        let url = "remove.cgi";
        if(checked) {
            url = "add.cgi";
        }
        const formdata = new FormData()
        formdata.append("id", id);
        formdata.append("title", title);
        xmlHttp.open("POST", url, false);
        xmlHttp.send(formdata);
    };
    const set_url = (input) => {
        const id = input.getAttribute("data-id");
        const td = document.getElementById("url_" + id)
        if(input.checked) {
            const url = `/[% OMD_SITE %]/api/pansnaps/${id}.html`
            td.innerHTML = `<a target=blank href="${url}">permanent link</a>`
        } else {
            td.innerHTML = ''
        }
    }

    const inputs = document.querySelectorAll('input[type="checkbox"]')
    inputs.forEach((input, index) => {
        set_url(input);
        input.addEventListener("change", function() {
            set_dashboard(this)
            set_url(this);
        });
    });
})
</script>
